{
  "name": "nodejs-esbuild-starter",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "ts": "node --loader esbuild-register/loader -r esbuild-register",
    "start": "yarn ts src/server.ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write . --ext .ts"
  },
  "dependencies": {
    "@envelop/graphql-jit": "^5.0.6",
    "graphql": "^16.6.0",
    "graphql-redis-subscriptions": "^2.6.0",
    "graphql-ws": "^5.12.0",
    "graphql-yoga": "^3.7.2",
    "ioredis": "^5.3.1",
    "nexus": "^1.3.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "esbuild": "^0.17.11",
    "esbuild-register": "^3.4.2",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  }
}
