{
  "name": "nodejs-esbuild-starter",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "ts": "node -r esbuild-register",
    "start": "yarn ts src/main.ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write . --ext .ts"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "esbuild": "^0.18.11",
    "esbuild-register": "^3.4.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  }
}
